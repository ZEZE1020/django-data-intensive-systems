# Django Configuration
DJANGO_SETTINGS_MODULE=config.settings.development
DEBUG=True
SECRET_KEY=your-insecure-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=django_data_intensive
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_URL=redis://redis:6379/1
REDIS_SESSION_URL=redis://redis:6379/2

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# Email Configuration (for development, use console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_SECURITY_POLICY=True

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Sentry Configuration (optional, for error tracking)
SENTRY_DSN=

# Prometheus Metrics
PROMETHEUS_PORT=8001
PROMETHEUS_METRICS_ENABLED=True

# API Configuration
API_RATE_LIMIT=1000/hour
API_PAGINATION_SIZE=20

# Sensor Configuration
SENSOR_BATCH_SIZE=100
SENSOR_AGGREGATION_INTERVAL=300  # 5 minutes in seconds

# E-commerce Configuration
ORDER_TIMEOUT=300  # 5 minutes in seconds
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_TIMEOUT=30  # seconds

# Celery Beat Schedule Configuration
CELERY_BEAT_SCHEDULE_ENABLED=True
CELERY_BEAT_SCHEDULER_CLASS=django_celery_beat.schedulers:DatabaseScheduler

# Feature Flags
ENABLE_AUDIT_LOGGING=True
ENABLE_REQUEST_TRACING=True
ENABLE_METRICS_COLLECTION=True

# Environment
ENVIRONMENT=development
